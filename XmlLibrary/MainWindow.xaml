        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn_load" Content="Load" Margin="10,103,0,0" HorizontalAlignment="Left" Width="330" Height="35" VerticalAlignment="Top" Click="btn_Load_Click"/>
