        <TextBox x:Name="txtTo" Grid.Column="1" HorizontalAlignment="Left" Height="40" Margin="49,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="337" TextChanged="txtTo_TextChanged"/>
        <Label x:Name="lblTo" Content="To" Grid.Column="1" Margin="49,10,10,414"/>
        <TextBox x:Name="txtMod" Height="34" Margin="20,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="btnSAuth" Content="Find By Author" Grid.Column="1" HorizontalAlignment="Left" Margin="15,177,0,0" VerticalAlignment="Top" Width="124" Height="34" Click="btnSAuth_Click"/>
        <Button x:Name="btnCTitle" Content="Count By Title" Grid.Column="1" HorizontalAlignment="Left" Margin="144,177,0,0" VerticalAlignment="Top" Width="121" Height="34" Click="btnCTitle_Click"/>
        <Button x:Name="btnCGender" Content="Count By Gender" Grid.Column="1" HorizontalAlignment="Left" Margin="270,177,0,0" VerticalAlignment="Top" Width="116" Height="34" Click="btnCGender_Click"/>
