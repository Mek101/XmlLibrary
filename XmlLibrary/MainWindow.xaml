        <Button x:Name="btnNLibShort" Content="Create libShort.xml" Grid.Column="1" HorizontalAlignment="Left" Margin="270,216,0,0" VerticalAlignment="Top" Width="116" Height="33" Click="btnNLibShort_Click"/>
        <Button x:Name="btn_save" Content="Save" Grid.Column="1" HorizontalAlignment="Left" Margin="49,103,0,0" VerticalAlignment="Top" Width="337" Height="35" Click="btn_save_Click"/>
        <ListBox x:Name="lst_output" HorizontalAlignment="Left" Height="198" Margin="20,234,0,0" VerticalAlignment="Top" Width="376"/>

    </Grid>
</Window>
